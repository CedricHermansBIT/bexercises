# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session Secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Base Path for subdirectory deployment (leave empty for root deployment)
# Example: BASE_PATH=/bitlab
BASE_PATH=

# Callback URL (update for production)
CALLBACK_URL=http://localhost:3000/auth/google/callback

# Admin Configuration
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com,user@example.com

# Or use domain-based admin access (all emails ending with this domain)
ADMIN_DOMAIN=@bitlab.nl

